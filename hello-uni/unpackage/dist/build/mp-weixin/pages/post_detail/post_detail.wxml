<view class="post-detail"><view class="top-area"></view><view class="detail-area"><view class="detail-top"><view class="topic">{{''+posts.title+''}}</view><view class="introdution">{{''+posts.introduction+''}}</view></view><view class="detail-text"><view class="text-top"><image src="https://img1.imgtp.com/2022/10/03/zKk6cjDc.jpg" class="_img"></image><view class="post-name">{{''+posts.user_name+''}}</view></view><view class="text-content">{{''+posts.content+''}}</view><view class="item-features"><view class="feature browse"><image src="../../static/imgs/postImg/icon-browse.png"></image><view class="num">{{posts.browse_num}}</view></view><view class="feature praise"><image src="../../static/imgs/postImg/icon-praise.png" data-event-opts="{{[['tap',[['add_praise',['$event']]]]]}}" bindtap="__e"></image><view class="num">{{posts.praise_num}}</view></view><view class="feature comment" url="../edit/edit"><image src="../../static/imgs/postImg/icon-comment.png"></image><view class="num">{{posts.comment_num}}</view></view></view></view><view class="input-comment"><input type="text" placeholder="评价千万条 友善第一条" data-event-opts="{{[['input',[['get_comment',['$event']]]]]}}" bindinput="__e"/><button data-event-opts="{{[['tap',[['add_comment',['$event']]]]]}}" bindtap="__e">发布</button></view><view class="detail-comment"><block wx:for="{{comments}}" wx:for-item="com" wx:for-index="index" wx:key="index"><view class="comment-list"><view class="text-top"><image src="{{com.user_picture}}" alt class="_img"></image><view class="post-name">{{''+com.user_name+''}}</view><view class="comment">{{''+com.user_content+''}}</view></view></view></block></view></view></view>