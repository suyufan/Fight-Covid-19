
page {
	background-color: #f8f8f8;
}
view{
	display: flex;
	box-sizing: border-box;
	flex-direction: column;
}
.about {
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.box {
	margin-top: 60px;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.logoImg {
	margin-bottom: 10rpx;
	width: 160rpx;
	height: 160rpx;
	border-radius: 15px;
}
.tip {
	text-align: center;
	font-size: 24rpx;
	margin-top: 10px;
	padding: 10rpx;
}
.appName {
	margin-top: 20px;
	font-size: 42rpx;
	font-weight: 500;
}
.qrcode,.qrcode .uqrcode{
	margin: 10px 0;
	width: 100px;
	height: 100px;

	display: block;
}
.copyright {
	font-size: 32rpx;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	bottom: 20px;
	/* left: 0; */
	position: fixed;
}
.agreement-box {
	justify-content: center;
}
.agreement {
	color: #2285ff;
	font-size: 26rpx;
}
.hint {
	text-align: center;
	color: #999999;
	font-size: 26rpx;
}

